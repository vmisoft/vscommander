    "viewsContainers": {
      "activitybar": [
        {
          "id": "vscommander",
          "title": "VSCommander",
          "icon": "media/icon-monochrome.svg"
        }
      ]
    },
    "views": {
      "vscommander": [
        {
          "id": "vscommander.sidebar",
          "name": "VSCommander"
        }
      ]
    },
    "viewsWelcome": [],
    "configuration": [
      {
        "title": "Theme",
        "properties": {
          "vscommander.theme": {
            "type": "string",
            "enum": [
              "far",
              "vscode"
            ],
            "default": "far",
            "description": "Color theme: 'far' for classic Far Manager colors, 'vscode' to match the active VS Code color theme"
          }
        }
      },
      {
        "title": "Display",
        "properties": {
          "vscommander.panelColumns": {
            "type": "number",
            "default": 2,
            "minimum": 1,
            "maximum": 3,
            "description": "Number of file columns per panel (1, 2, or 3)"
          },
          "vscommander.clock": {
            "type": "boolean",
            "default": true,
            "description": "Show clock in the top-right corner of the panel"
          },
          "vscommander.interceptF1": {
            "type": "boolean",
            "default": false,
            "description": "Intercept F1 key to show the built-in help system instead of VS Code help"
          },
          "vscommander.logLevel": {
            "type": "string",
            "default": "off",
            "enum": ["off", "error", "info", "debug"],
            "description": "Log level for the VSCommander output channel"
          }
        }
      },
      {
        "title": "Terminal",
        "properties": {
          "vscommander.windowsBackend": {
            "type": "string",
            "enum": [
              "winpty",
              "conpty"
            ],
            "default": "winpty",
            "markdownDescription": "Windows PTY backend. `winpty` (default) is the legacy backend with broad compatibility. `conpty` uses the newer Windows Pseudo Console API but may hang on some systems. **Windows only** â€” ignored on other platforms."
          }
        }
      },
      {
        "title": "User Menu",
        "properties": {
          "vscommander.userMenu": {
            "type": "array",
            "default": [],
            "description": "User menu items (F2). Each item: { hotkey, label, commands?, submenu?, children? }",
            "items": {
              "type": "object",
              "properties": {
                "hotkey": {
                  "type": "string",
                  "description": "Single character hotkey, F1-F24, or -- for separator"
                },
                "label": {
                  "type": "string",
                  "description": "Display text for the menu item"
                },
                "commands": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Shell commands to execute (supports variable substitution)"
                },
                "submenu": {
                  "type": "boolean",
                  "description": "True if this item is a submenu container"
                },
                "children": {
                  "type": "array",
                  "description": "Nested menu items (for submenus)"
                }
              },
              "required": [
                "hotkey",
                "label"
              ]
            }
          }
        }
      },
      {
        "title": "File Navigation",
        "properties": {
          "vscommander.showDotfiles": {
            "type": "boolean",
            "default": true,
            "description": "Show dotfiles (hidden files) in the panel"
          },
          "vscommander.sortMode": {
            "type": "string",
            "default": "name",
            "enum": [
              "name",
              "extension",
              "size",
              "date",
              "unsorted",
              "creationTime",
              "accessTime",
              "changeTime",
              "description",
              "owner",
              "allocatedSize",
              "hardLinks",
              "streams",
              "streamSize"
            ],
            "description": "Default sort mode for file panels"
          },
          "vscommander.sortReversed": {
            "type": "boolean",
            "default": false,
            "description": "Reverse the default sort order"
          },
          "vscommander.sortDirsFirst": {
            "type": "boolean",
            "default": true,
            "description": "Show directories before files in file panels"
          },
          "vscommander.useSortGroups": {
            "type": "boolean",
            "default": false,
            "description": "Use sort groups for file ordering"
          }
        }
      },
      {
        "title": "Hotkeys",
        "properties": {
          "vscommander.keyHelp": {
            "type": "string",
            "default": "F1",
            "description": "Key binding for Help (open help system)"
          },
          "vscommander.keyView": {
            "type": "string",
            "default": "F3",
            "description": "Key binding for View (reveal file in Explorer)"
          },
          "vscommander.keyEdit": {
            "type": "string",
            "default": "F4",
            "description": "Key binding for Edit (open file in editor)"
          },
          "vscommander.keyCopy": {
            "type": "string",
            "default": "F5",
            "description": "Key binding for Copy (copy files)"
          },
          "vscommander.keyMove": {
            "type": "string",
            "default": "F6",
            "description": "Key binding for Move/Rename (move or rename files)"
          },
          "vscommander.keyMkdir": {
            "type": "string",
            "default": "F7",
            "description": "Key binding for Mkdir (create directory)"
          },
          "vscommander.keyDelete": {
            "type": "string",
            "default": "F8",
            "description": "Key binding for Delete (move to Trash)"
          },
          "vscommander.keyForceDelete": {
            "type": "string",
            "default": "Shift+F8",
            "description": "Key binding for permanent Delete (bypass Trash)"
          },
          "vscommander.keyQuit": {
            "type": "string",
            "default": "F10",
            "description": "Key binding for Quit (close panel)"
          },
          "vscommander.keyMenu": {
            "type": "string",
            "default": "F9",
            "description": "Key binding for Menu (open top menu bar)"
          },
          "vscommander.keyDriveLeft": {
            "type": "string",
            "default": "Alt+F1",
            "description": "Key binding for Change Drive popup (left pane)"
          },
          "vscommander.keyDriveRight": {
            "type": "string",
            "default": "Alt+F2",
            "description": "Key binding for Change Drive popup (right pane)"
          },
          "vscommander.keyToggleDotfiles": {
            "type": "string",
            "default": "Ctrl+H",
            "description": "Key binding for toggling dotfile visibility"
          },
          "vscommander.keyTogglePane": {
            "type": "string",
            "default": "Ctrl+P",
            "description": "Key binding for toggling inactive pane visibility"
          },
          "vscommander.keyDetach": {
            "type": "string",
            "default": "Alt+Enter",
            "description": "Key binding for detach/attach fullscreen window"
          },
          "vscommander.keyResizeLeft": {
            "type": "string",
            "default": "Ctrl+Left",
            "description": "Key binding for moving pane border left"
          },
          "vscommander.keyResizeRight": {
            "type": "string",
            "default": "Ctrl+Right",
            "description": "Key binding for moving pane border right"
          },
          "vscommander.keyQuickView": {
            "type": "string",
            "default": "Ctrl+Q",
            "description": "Key binding for Quick View (preview file in split editor)"
          }
        }
      },
