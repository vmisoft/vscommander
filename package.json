{
  "name": "vscommander",
  "displayName": "VSCommander",
  "description": "Dual-panel file manager overlaid on a real terminal",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/vmisoft/vscommander.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscommander.open",
        "title": "VSCommander: Open Terminal"
      }
    ],
    "keybindings": [
      {
        "command": "vscommander.open",
        "key": "alt+c"
      },
      {
        "command": "vscommander.toggle",
        "key": "ctrl+o",
        "when": "terminalFocus"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001bOP"
        },
        "key": "f1",
        "when": "terminalFocus && vscommander.panelVisible && vscommander.interceptF1"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;5P"
        },
        "key": "ctrl+f1",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;3P"
        },
        "key": "alt+f1",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;3Q"
        },
        "key": "alt+f2",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001bOR"
        },
        "key": "f3",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[15~"
        },
        "key": "f5",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;5D"
        },
        "key": "ctrl+left",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;5C"
        },
        "key": "ctrl+right",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "\u001b[1;5B"
        },
        "key": "ctrl+down",
        "when": "terminalFocus && vscommander.panelVisible"
      },
      {
        "command": "workbench.action.terminal.sendSequence",
